<Page x:Class="up.wins.Report"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:up.wins"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Report">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">
            <Button x:Name="RB1" Content="Отчёт 1" Margin="10" Padding="5" Click="RB1_Click"/>
            <Button x:Name="RB2" Content="Отчёт 2" Margin="10" Padding="5" Click="RB2_Click"/>
        </StackPanel>
        <Grid  Grid.Row="1">
            <Label x:Name="report1" Content="аааа" Background="Blue" Visibility="Hidden"/>
            <Label x:Name="report2" Content="бббб" Background="Green" Visibility="Hidden"/>
        </Grid>
    </Grid>
</Page>
