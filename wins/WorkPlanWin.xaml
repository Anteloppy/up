<Page x:Class="up.wins.WorkPlanWin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:up.wins"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="WorkPlanWin">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>
        <StackPanel Margin="5" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="BEdit" Content="Редактирование" Width="120" Height="30" Margin="5" Padding="5" Click="BEdit_Click"/>
            <Button x:Name="BDelete" Content="Удаление" Width="120" Height="30" Margin="5" Padding="5" Click="BDelete_Click" Background="#FFFF6363" BorderBrush="#FFA01313"/>
            <Label Content="Поиск:" Margin="15,0,10,0" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold" FontSize="15"/>
            <TextBox x:Name="TBfind" Height="30" Width="120"/>
        </StackPanel>
        <DataGrid x:Name="DGWorkPlan" Grid.Row="1" AutoGenerateColumns="True"/>
    </Grid>
</Page>
