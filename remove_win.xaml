<Window x:Class="up.remove_win"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:up"
        mc:Ignorable="d"
        Title="RemoveWindow" Height="70" Width="450">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="из таблицы" Margin="10"/>
            <ComboBox x:Name="CB" Margin="10" Width="100"/>
            <Label Content="элемент под id" Margin="10"/>
            <TextBlock x:Name="TB" Text="0" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10" Width="15"/>
            <Button x:Name="BRemove" Content="удалить" Width="55" Margin="10" Click="BRemove_Click"/>
        </StackPanel>
    </Grid>
</Window>
