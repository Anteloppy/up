<Page x:Class="up.edit_wins.CropEdit"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:up.edit_wins"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="300"
      Title="CropEdit"
      Background="#FFE8E8E8">

    <Grid>
        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Grid.Column="0" Orientation="Vertical" Width="300" Margin="5">
            <StackPanel Orientation="Horizontal" Margin="-5,15,-5,10" HorizontalAlignment="Center">
                <Button x:Name="BEdit" Content="Изменить" Width="100" Height="30" Padding="5" Click="Edit_Click" Background="#FFA7FFFD" BorderBrush="#FF3CB1ED"/>
                <Label Content="посевную площать, где id:" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="5"/>
                <TextBox x:Name="TBid" Width="15" Padding="5" Height="25" HorizontalAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Right">
                <Label Content="название площади" HorizontalAlignment="Center" Padding="5"/>
                <TextBox x:Name="TBcrop_name" Width="150" Padding="5" Height="25" HorizontalAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Right">
                <Label Content="площадь" HorizontalAlignment="Center" Padding="5"/>
                <TextBox x:Name="TBarea" Width="150" Padding="5" Height="25" HorizontalAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Right">
                <Label Content="дата посева" HorizontalAlignment="Center" Padding="5"/>
                <TextBox x:Name="TBplanting_date" Width="150" Padding="5" Height="25" HorizontalAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Right">
                <Label Content="ожидаемая дата сбора" HorizontalAlignment="Center" Padding="5"/>
                <TextBox x:Name="TBexpected_harvest_date" Width="150" Padding="5" Height="25" HorizontalAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Right">
                <Label Content="id сорта" HorizontalAlignment="Center" Padding="5"/>
                <TextBox x:Name="TBvariety_id" Width="150" Padding="5" Height="25" HorizontalAlignment="Center"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
